<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Net_Terms_Others_Note</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Net_Terms__c, &quot;Other&quot;),
    ISBLANK(Net_Terms_Note__c),
    NOT(Skip_Validations__c)
)</errorConditionFormula>
    <errorDisplayField>Net_Terms_Note__c</errorDisplayField>
    <errorMessage>Net Terms Note is required if Net Terms is Other</errorMessage>
</ValidationRule>
