<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_Contact_on_Closed_Won</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(StageName), ISPICKVAL(StageName, &apos;Closed Won&apos;), ISBLANK(Primary_Billing_Contact__c), NOT(ChekParentRecordType__c ))</errorConditionFormula>
    <errorDisplayField>Primary_Billing_Contact__c</errorDisplayField>
    <errorMessage>Please fill Primary Billing Contact.</errorMessage>
</ValidationRule>
